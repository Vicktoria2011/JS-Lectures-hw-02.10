function findTotal(myArr) {
    let total = 0;

    for (let i = 0; i < myArr.length; i++) {
    total += myArr[i];
    }

    return total;
}

const myArr = [2, 3, 4, 5, 6];
let total = findTotal(myArr);
console.log(total);

