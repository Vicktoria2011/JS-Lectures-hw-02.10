function findAvg(a, b, c) {
    if (a > b) {
        if (a > c) {
            // a - max
            if (b > c) {
                return b;
            } else {
                return c;
            }
        } else {
            return a;
        }
    } 
}

const a = 5;
const b = 4;
const c = 3;

const avg = findAvg(a, b, c);
console.log("Середнє число по значенню " + avg);

