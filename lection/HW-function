function returnResult(arr3) {
    for (let i = 0; i < arr3.length; i++) {
        for (let i1 = 0; i1 < arr3[i].length; i1++) {
            product *= arr3[i][i1];
        }
    }
    console.log(product);
}

const arr3 = [[1], [2], [3]]  // >  console.log(product) має повернути 6
let product = 1;
returnResult(arr3);


