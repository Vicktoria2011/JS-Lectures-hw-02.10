function deleteLetters(text) {
    return text.replace(/[а, е, є, и, і, о, у, ю, я]/gi,'');
    }

var text="ГідроелектростанціЯ";
var s=text.replace(/[а, е, є, и, і, о, у, ю, я]/gi,'');
console.log(s);

