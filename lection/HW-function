function McDonalds(gamburgers, friesPotatos) {
    if (gamburgers > 3 && friesPotatos >= 1) {
        console.log('Ми поїли');
    } else if (gamburgers < 4 || friesPotatos < 1) {
        console.log('Ми йдемо в інше кафе');
    }
}

let gamburgers = 4;
let friesPotatos = 1;
McDonalds(gamburgers, friesPotatos);

