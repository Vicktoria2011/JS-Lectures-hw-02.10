function getDayOfWeek(day) {
    switch (day) {
        case 0:
            return "Воскресенье";
        case 1:
            return "Понедельник";
        case 2:
            return "Вторник";
        case 3:
            return "Среда";
        case 4:
            return "Четверг";
        case 5:
            return "Пятница";
        case 6:
            return "Суббота";
        default:
            return "Невірний день";
    }
}

const day = new Date().getDay();
const dayOfWeek = getDayOfWeek(day);
console.log(dayOfWeek);


/*
7.
*/

function calculate(a1, b1, operation) {
    let result;

    switch (operation) {
        case "+":
            result = a1 + b1;
            break;
        case "-":
            result = a1 - b1;
            break;
        case "*":
            result = a1 * b1;
            break;
        case "/":
            result = a1 / b1;
            break;
    }
    console.log(result);
}

const a1 = 2;
const b1 = 1;
const c1 = '+';
calculate(a1, b1, c1);


