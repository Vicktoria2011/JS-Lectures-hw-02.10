function fillMyArray(min, max) {
    let myArray1 = [];

    for (let i = min; i <= max; i++) {
        if (i % 2 === 0) {
            myArray1.push(i);
        }
    }
    return myArray1;
}

let myArray1 = fillMyArray(1, 9);
console.log(myArray1);


function fillMyArray(min, max) {
    let myArray2 = [];

    for (let i = min; i <= max; i++) {
        if (i % 2 !== 0) {
            myArray2.push(i);
        }
    }
    return myArray2;
}

let myArray2 = fillMyArray(1, 9);
console.log(myArray2);


