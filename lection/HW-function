function findSeason(season) {
    if(season === 0){
        console.log("Сейчас зима")
    }else if(season === 1){
        console.log("Сейчас весна")
    }else if(season === 2){
        console.log("Сейчас лето")
    }else if(season === 3){
        console.log("Сейчас осень")
    }else {
        console.log('Value does not exist')
    }
}

let season = 3;
let winter = 0;
let spring = 1;
let summer = 2;
let autumn = 3;
findSeason(season);

або

function findSeason(season1) {
    if(seasonNum === 1){
        season1 = "Зима"
    } else if(seasonNum === 2){
        season1 = "Весна"
    } else if(seasonNum === 3){
        season1 = "Літо"
    } else if(seasonNum === 4){
        season1 = "Осінь"
    } else {
        season1 = 'Value does not exist'
    }
    console.log("Зараз: " + season1);
}

const seasonNum = 4;
let season1;
findSeason(season1);

