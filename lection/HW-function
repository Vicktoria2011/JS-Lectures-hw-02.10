function writeArr(arr1) {
    for (let i = 0; i < arr1.length; i++) {
        for (let i1 = 0; i1 < arr1[i].length; i1++) {
            console.log(arr1[i][i1]);
        }
    }
} 

const arr1 = [[1, 2], [3, 4], [5, 6]];
writeArr(arr1);

